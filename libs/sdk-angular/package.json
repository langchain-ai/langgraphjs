{
  "name": "@langchain/angular",
  "version": "0.0.1",
  "description": "Angular integration for LangGraph & LangChain",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist/ dist-cjs/",
    "build": "yarn turbo:command build:internal --filter=@langchain/angular",
    "build:internal": "yarn workspace @langchain/build compile @langchain/angular",
    "prepublish": "yarn build",
    "format:check": "prettier --check src",
    "format": "prettier --write src",
    "lint:eslint": "NODE_OPTIONS=--max-old-space-size=4096 eslint --cache --ext .ts,.js,.jsx,.tsx src/",
    "lint": "yarn lint:eslint",
    "lint:fix": "yarn lint:eslint --fix",
    "test": "vitest run"
  },
  "license": "MIT",
  "dependencies": {
    "@langchain/langgraph-sdk": "workspace:^"
  },
  "devDependencies": {
    "@angular/core": "^20.3.10",
    "@langchain/core": "^1.0.1",
    "@langchain/scripts": "^0.1.4",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-instanceof": "^1.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5 || ^5.4.5",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@angular/core": "^18.0.0 || ^19.0.0 || ^20.0.0",
    "@langchain/core": "^1.0.1"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "input": "./src/index.ts",
      "typedoc": "./src/index.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/"
  ]
}
