{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["scripts/*", "dist/*"]
}
